{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DeriveOlympiaAddressFromPublicKeyRequest",
  "description": "Given an ECDSA Secp256k1 Public Key and Olympia network, this function derives the Olympia account address associated with the public key on that network.",
  "type": "object",
  "required": [
    "network",
    "public_key"
  ],
  "properties": {
    "network": {
      "description": "The Olympia network to derive the account address for.",
      "allOf": [
        {
          "$ref": "#/definitions/OlympiaNetwork"
        }
      ]
    },
    "public_key": {
      "description": "The public key to derive the non-fungible global id for.",
      "allOf": [
        {
          "$ref": "#/definitions/PublicKey"
        }
      ]
    }
  },
  "definitions": {
    "OlympiaNetwork": {
      "type": "string",
      "enum": [
        "Mainnet",
        "Stokenet",
        "Releasenet",
        "Rcnet",
        "Milestonenet",
        "Devopsnet",
        "Sandpitnet",
        "Localnet"
      ]
    },
    "PublicKey": {
      "description": "A discriminated union of the possible public keys used by Scrypto and the Radix Engine.",
      "oneOf": [
        {
          "description": "A byte array of 33 bytes which are serialized as a 66 character long hex-encoded string representing a public key from the ECDSA Secp256k1 elliptic curve.",
          "examples": [
            {
              "curve": "EcdsaSecp256k1",
              "public_key": "0279be667ef9dcbbac55a06295ce870b07029bfcdb2dce28d959f2815b16f81798"
            }
          ],
          "type": "object",
          "required": [
            "curve",
            "public_key"
          ],
          "properties": {
            "curve": {
              "type": "string",
              "enum": [
                "EcdsaSecp256k1"
              ]
            },
            "public_key": {
              "type": "string",
              "maxLength": 66,
              "minLength": 66,
              "pattern": "[0-9a-fA-F]+"
            }
          }
        },
        {
          "description": "A byte array of 32 bytes which are serialized as a 64 character long hex-encoded string representing a public key from the EDDSA Ed25519 edwards curve.",
          "examples": [
            {
              "curve": "EddsaEd25519",
              "public_key": "4cb5abf6ad79fbf5abbccafcc269d85cd2651ed4b885b5869f241aedf0a5ba29"
            }
          ],
          "type": "object",
          "required": [
            "curve",
            "public_key"
          ],
          "properties": {
            "curve": {
              "type": "string",
              "enum": [
                "EddsaEd25519"
              ]
            },
            "public_key": {
              "type": "string",
              "maxLength": 66,
              "minLength": 66,
              "pattern": "[0-9a-fA-F]+"
            }
          }
        }
      ]
    }
  }
}